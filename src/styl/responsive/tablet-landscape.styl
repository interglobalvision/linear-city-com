// HIGHLIGHTS

.highlight-center::before
    width: calc( '100% + ' + ($margin-mid) )
    left: -( $margin-basic )

.highlight-hero::before
  width: 86%
  height: 100px
  left: 6%
  top: 50%
  margin-top: -50px

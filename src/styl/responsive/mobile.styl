// BASIC

html,body
  overflow-x: hidden

.container-full
  width: 100%
  margin: 0 auto
  display: block

.splash-with-image
  height: 100vh
  max-width: 1920px
  background-size: cover
  background-position: center
  box-shadow: 0 5px 10px 0 rgba(0, 0, 0, .5)

.splash-text
  height: calc('100% - 100px')
  color: $color-white

.diagonal-divider
  max-width: 1600px
  path
    stroke: $color-blue
    stroke-width: 4

a.button, a.button:active, a.button:visited
  display: inline-block
  text-align: center
  background-color: $color-blue
  padding: $margin-small $margin-basic
  border-radius: $margin-tiny
  color: $color-white
  font-size: $font-size-small

// ******************************************************

// HIGHLIGHTS

.highlight
  position: relative
  &:before
    content: ''
    position: absolute
    background-color: $color-yellow
    z-index: -100

.highlight-center::before
  width: calc( '100% + ' + ($margin-mid) )
  height: 130%
  left: -( $margin-basic )
  top: 0

.highlight-heading::before
  width: 100%
  height: 130%
  left: -( $margin-basic )
  top: 0

.highlight-hero::before
  width: 86%
  height: 50%
  left: 6%
  top: 25%

.highlight-heading-wide::before
  width: 200%
  height: 130%
  left: -( $margin-basic )
  top: 0

.highlight-heading-alt
  h1, h2, h3
    padding-left: $margin-mid
  &::before
    width: 180%
    height: 130%
    right: $margin-basic
    top: 0


// ******************************************************

// HEADER

#header
  position: fixed
  top: 0
  left: 0
  width: 100%
  will-change: color
  transition: 300ms color linear
  z-index: 500
  &.splash-header
    color: $color-white
    svg
      fill: $color-white

#header-menu
  display: none

#mobile-open-menu
  height: 20px
  transition: 300ms fill linear
  fill: $color-black

#mobile-close-menu
  height: 22px
  fill: $color-white

#mobile-menu
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 600
  background-color: $color-blue
  color: $color-white
  transform: translateX(100%)
  transition: 300ms transform cubic-bezier(0, 0, 0.03, 1.01)
  &.active
    transform: translateX(0)

// ******************************************************

// FOOTER

#footer
  width: 100%
  color: $color-white
  background-color: $color-blue

#footer-menu
  display: flex
  width: 100%
  justify-content: space-between

.footer-contact-text
  font-size: $font-size-mid
